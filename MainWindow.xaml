<Window x:Class="Bordsbokningar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bordsbokningar"
        mc:Ignorable="d"
        Title="MainWindow" Height="416" Width="773" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150px"/>
            <ColumnDefinition Width="150px"/>
            <ColumnDefinition Width="150px"/>
            <ColumnDefinition Width="150px"/>
            <ColumnDefinition Width="150px"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="30px"/>
            <RowDefinition Height="90px"/>
            <RowDefinition Height="90px"/>
            <RowDefinition Height="90px"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DatePicker Grid.Row="1" x:Name="SelectDate_date" HorizontalAlignment="Center" VerticalAlignment="Center" FirstDayOfWeek="Monday" SelectedDateChanged="Date_Selected" Width="130"/>
        <Label x:Name="Title" Content="Mias a lá Carte: Bordsbokning" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" FontFamily="Broadway" Grid.ColumnSpan="3" Width="410" Margin="10,0,0,0"/>
        <Button x:Name="Table1_16_btn" Content="Bord 1:&#xD;&#xA;16:00 - 18:00" Grid.Row="2" Margin="10,10,10,10" Click="PickBooking" IsEnabled="False"/>
        <Button x:Name="Table2_16_btn" Grid.Column="1" Content="Bord 2:&#xD;&#xA;16:00 - 18:00" Grid.Row="2" Margin="10,10,10,10" Click="PickBooking" IsEnabled="False"/>
        <Button x:Name="Table3_16_btn" Grid.Column="2" Content="Bord 3:&#xD;&#xA;16:00 - 18:00" Grid.Row="2" Margin="10,10,10,10" Click="PickBooking" IsEnabled="False"/>
        <Button x:Name="Table4_16_btn" Grid.Column="3" Content="Bord 4:&#xD;&#xA;16:00 - 18:00" Grid.Row="2" Click="PickBooking" Margin="10,10,10,10" IsEnabled="False"/>
        <Button x:Name="Table5_16_btn" Grid.Column="4" Content="Bord 5:&#xD;&#xA;16:00 - 18:00" Grid.Row="2" Margin="10,10,10,10" Click="PickBooking" IsEnabled="False"/>

        <Button x:Name="Table1_18_btn" Content="Bord 1:&#xD;&#xA;18:00 - 20:00" Grid.Row="3" Margin="10,10,10,10" Click="PickBooking" IsEnabled="False"/>
        <Button x:Name="Table2_18_btn" Grid.Column="1" Content="Bord 2:&#xD;&#xA;18:00 - 20:00" Grid.Row="3" Margin="10,10,10,10" Click="PickBooking" IsEnabled="False"/>
        <Button x:Name="Table3_18_btn" Grid.Column="2" Content="Bord 3:&#xD;&#xA;18:00 - 200:00" Grid.Row="3" Margin="10,10,10,10" Click="PickBooking" IsEnabled="False"/>
        <Button x:Name="Table4_18_btn" Grid.Column="3" Content="Bord 4:&#xD;&#xA;18:00 - 20:00" Grid.Row="3" Margin="10,10,10,10" Click="PickBooking" IsEnabled="False"/>
        <Button x:Name="Table5_18_btn" Grid.Column="4" Content="Bord 5:&#xD;&#xA;18:00 - 20:00" Grid.Row="3" Click="PickBooking" Margin="10,10,10,10" IsEnabled="False"/>

        <Button x:Name="Table1_20_btn" Content="Bord 1:&#xD;&#xA;20:00 - 22:00" Grid.Row="4" Margin="10,10,10,10" Click="PickBooking" IsEnabled="False"/>
        <Button x:Name="Table2_20_btn" Grid.Column="1" Content="Bord 2:&#xD;&#xA;20:00 - 22:00" Grid.Row="4" Margin="10,10,10,10" Click="PickBooking" IsEnabled="False"/>
        <Button x:Name="Table3_20_btn" Grid.Column="2" Content="Bord 3:&#xD;&#xA;20:00 - 22:00" Grid.Row="4" Margin="10,10,10,10" Click="PickBooking" IsEnabled="False"/>
        <Button x:Name="Table4_20_btn" Grid.Column="3" Content="Bord 4:&#xD;&#xA;20:00 - 22:00" Grid.Row="4" Margin="10,10,10,10" Click="PickBooking" IsEnabled="False"/>
        <Button x:Name="Table5_20_btn" Grid.Column="4" Content="Bord 5:&#xD;&#xA;20:00 - 22:00" Grid.Row="4" Margin="10,10,10,10" Click="PickBooking" IsEnabled="False"/>
        <Button x:Name="displayBookings" Grid.Column="3" Content="Visa bokningar (debugg)" HorizontalAlignment="Center" VerticalAlignment="Center" Width="280" Grid.ColumnSpan="2" Height="39" Click="DisplayBookings_Click"/>
    </Grid>
</Window>
